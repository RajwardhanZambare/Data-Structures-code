//cpp
class Solution {
public:
    int searchInsert(vector<int>& nums, int target) {
        bool found=false;
        int index;
        for(int i=0; i<nums.size(); i++){
            if(nums[i] == target){
                found=true;
                return i;
            }
        }
        if(found==false){
            if(nums.size()==1){
                if(target<nums[0]){
                    return 0;
                }
                else{
                    return 1;
                }
            }
            for(int i=0; i<nums.size()-1; i++){
                if(target>nums[i]){
                    if(target<nums[i+1]){
                        return i+1;
                    }
                }
                else if(target<nums[i]){
                    return i;
                }
            }

        }
        return index;
    }
};
//java
class Solution {
    public int searchInsert(int[] nums, int target) {
        for(int i=0; i<nums.length; i++){
            if(nums[i] >= target){
                return i;
            }
        }
        return nums.length;
    }
}
