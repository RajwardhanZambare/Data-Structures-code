class Solution {
public:
    bool isPalindrome(int x) {
        int rem, x2=x;
        if(x<0){
            return false;
        }
        long long rev_num=0/10; //if x = 2000000009 and if it is reversed then it excedes the range of int datatype i.e:- INTMAX. so declare rev_num as long long datatype       
        while(x>0){
            rev_num=(rev_num*10)+x%10;
            x=x/10;
        }
        if(rev_num==x2){
            return true;
        }
        else{
            return false;
        }
    }
};
